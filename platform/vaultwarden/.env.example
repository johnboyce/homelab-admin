# Vaultwarden secrets — copy to /etc/homelab/secrets/vaultwarden.env on geek
# sudo chmod 600 /etc/homelab/secrets/vaultwarden.env

# PostgreSQL connection (create DB + user first — see below)
DATABASE_URL=postgresql://vaultwarden:STRONGPASSWORD@geek-postgres:5432/vaultwarden

# Admin panel token (argon2id hash — NOT the raw password)
# Generate with:
#   sudo docker run --rm -it vaultwarden/server /vaultwarden hash --preset owasp
ADMIN_TOKEN=argon2id-hash-of-admin-password

